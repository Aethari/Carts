pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
-- untitled soulslike game
-- 2025 aethari

-- player
local p = {
	x = 0,
	y = 0,
	dx = 0,
	dy = 0,

	sprite = 1,

	speed = .4,
	maxspeed = 1.5
}

function p.draw()
	spr(p.sprite, p.x, p.y)
end

function p.input()
	-- left/right
	if btn(0) then
		if p.dx > -p.maxspeed then
			p.dx -= p.speed 
		end
	elseif btn(1) then
		if p.dx < p.maxspeed then
			p.dx += p.speed
		end
	else
		if p.dx < 0 then
			p.dx += p.speed
		elseif p.dx > 0 then
			p.dx -= p.speed
		end
	end

	-- up/down
	if btn(2) then
		if p.dy > -p.maxspeed then
			p.dy -= p.speed
		end
	elseif btn(3) then
		if p.dy < p.maxspeed then
			p.dy += p.speed
		end
	else
		if p.dy < 0 then
			p.dy += p.speed
		elseif p.dy > 0 then
			p.dy -= p.speed
		end
	end

	p.x += p.dx
	p.y += p.dy
end

function _update()
	p.input()
end

function _draw()
	cls(0)

	map(0, 0, 0, 0, 17, 17)

	p.draw()
end
